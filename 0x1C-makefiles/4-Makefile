CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c
	$(CC) $(CFLAGS)   -c -o main.o main.c

holberton.o: holberton.c m.h
	$(CC) $(CFLAGS)   -c -o holberton.o holberton.c

clean:
	rm -f *~ holberton
	
oclean:
	rm -f main.o holberton.o

fclean:
	rm -f *~ holberton
	rm -f main.o holberton.o

re:
	rm -f main.o holberton.o
	$(CC) -c -o main.o main.c
	$(CC) -c -o holberton.o holberton.c
	$(CC) $(OBJ) -o $(NAME)
